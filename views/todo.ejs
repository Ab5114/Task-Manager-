<!-- views/todo.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
     <script src="/script.js"></script>
  </head>
  <style>
   * {
  margin: 0;
  padding: 0;
}
body {
  position: relative;
  height: 100vh;
  display: flex;
  justify-content: center;
  overflow: hidden;

  background: linear-gradient(to right, rgb(55, 79, 216), rgb(54, 209, 220));
}
.container {
  background-color: rgb(238, 229, 213);
  padding: 35px;
  min-height: 80%;
  position: absolute;
  top: 5%;
 }
 
.create-tasks {
  /* width: 40%; */
  /* height: 200px; */

  display: flex;
  justify-content: center;
}

.heading {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10px;
  margin-bottom: 20px;
}

.create-tasks input {
  /* width: 300px; */
  padding: 5px 10px;
  outline: none; /* Remove default outline */
  outline: 1px solid rgb(221, 211, 96);
  border: none;
  border-radius: 4px 0 0 4px;
  background: white;
  /* flex-grow: 1; */
  transition: outline 0.3s ease-in-out, box-shadow 0.3s ease-in-out; /* Smooth transition */
}

.create-tasks input:focus {
  outline: 1px solid rgb(221, 224, 64);
  box-shadow: 0 0 2px rgb(221, 224, 64, 0.8), 0 0 2px rgba(102, 178, 255, 0.8);
}
button {
  background-color: #007bff; /* Vibrant blue */
  color: white; /* White text */
  padding: 10px 16px; /* Comfortable padding */
  border-radius: 0 6px 6px 0px; /* Slightly rounded corners */
  border: none; /* Remove default border */
  font-size: 16px; /* Slightly larger text */
  cursor: pointer; /* Pointer cursor on hover */
  transition: background-color 0.3s ease, box-shadow 0.3s ease; /* Smooth hover transition */
}

button:hover {
  background-color: #0056b3;
  box-shadow: 0 0px 8px rgba(2, 48, 255, 0.3);
}

button:active {
  background-color: #01458d;
  box-shadow: 0 2px 4px rgba(1, 14, 73, 0.2);
  transform: scale(0.98);
}

.tasks {
  max-width: 600px;
  margin: 20px auto;
  margin-bottom: 0;
  padding: 15px;
  border: 2px solid #ccc;
  border-radius: 8px;
  background-color: #f9f9f9;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.tasks h3 {
  text-align: center;
  color: rgb(239, 85, 3);
  font-family: "Roboto", sans-serif;
  font-size: 1.5em;
  margin-bottom: 10px;
}

.tasks ul {
  list-style: none;
}

.tasks li {
  font-family: "Arial", sans-serif;
  font-size: 1em;
  color: #333;
  margin-bottom: 8px;
  line-height: 1.5;
  padding: 5px;
  background-color: gainsboro;
  display: flex; /* Flexbox layout */
  justify-content: space-between; /* Space between child elements */
  align-items: center;
}

.tasks li span {
  overflow-wrap: anywhere;
  max-width: 90px;
}

.tasks li:last-child {
  margin-bottom: 0;
}
.completed {
  text-decoration: line-through;
  color: gray;
}
.tasks li .del {
  background-color: rgb(255, 0, 0);
  padding: 8px 8px;
  border-radius: 6px;
  font-size: 14px;
  box-shadow: none;
}
.tasks li .del:hover {
  background-color: rgba(159, 6, 6, 0.779); /* Darker red on hover */
  box-shadow: none;
}

@media (min-width: 650px) {
  .create-tasks input {
    width: 300px;
  }

  .tasks {
    min-width: 400px;
    width: auto;
  }
}

@media (min-width: 1024px) {
  .tasks {
    min-width: 500px;
  }
}

@media (max-width: 650px) {
  .container {
    padding: 10px;
    width: 100%;
    box-sizing: border-box;
  }

  .create-tasks input {
    width: 100%;
    flex: 1;
    max-width: 300px;
  }

  .create-tasks button {
    border-radius: 0 0 4px 4px;
  }
}

  </style>

  <body>
     
      


     
    <div class="container">
      <div class="heading">
        <!-- <img src="./icons/shopping_list-512.webp" style="width: 40px" alt="" /> -->
        <h2 style="text-align: center">ToDo List</h2>
      </div>
      <div class="create-tasks">
        <input type="text" id="new-task" placeholder="Add a new Task" />
        <button onclick="addTask()">Add Task</button>
      </div>

      <div class="tasks">
        <h3 style="text-align: center; color: rgb(239, 85, 3)">Your Tasks</h3>
        <ul>
          <% tasks.forEach(task => { %>
          <li data-id="<%= task._id %>">
            <div class="task-content">
              <input type="checkbox" onchange="toggleTask(this)" <%=
              task.isCompleted ? 'checked' : '' %> />
              <span class="<%= task.isCompleted ? 'completed' : '' %>"
                ><%= task.taskContent %></span
              >
            </div>
            <button class="del" onclick="removeTask(this)">Delete</button>
          </li>
          <% }); %>
        </ul>
      </div>
    </div>
  </body>
  
</html>
